@helper datetimepickerScript(DateTimeOffset Date)
{
<script type="text/javascript">
$(function () {
    $('#datetimepicker_similarmedia').datetimepicker({
        dayViewHeaderFormat: "YYYY/MM",
        allowInputToggle: true,
        format: "YYYY-MM-DD",
        defaultDate: new Date(@(Date.Year), @(Date.Month - 1), @(Date.Day)),
        maxDate: Date.now()
    });
});
</script>
}


